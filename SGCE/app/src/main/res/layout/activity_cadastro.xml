<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary"
    tools:context="br.com.evandro.sgce.Cadastro"    >

    <!-- Pagina de Cadastro -->

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_energia2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <!-- Informações do usúario -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Contrato"
        android:textSize="20dp"
        android:textColor="@color/font_primary"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNome"
        android:hint="Digite o Número do Contrato"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="N° Contador de Energia"
        android:layout_marginTop="25dp"
        android:textColor="@color/font_primary"
        android:id="@+id/textView3"
        android:layout_below="@+id/editNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNumRelogio"
        android:hint="N° Contador de Energia"
        android:inputType="number"
        android:layout_below="@+id/editNome"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/editNumRelogio"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNome"
            android:id="@+id/btnSalvarCadastro"
            android:layout_marginTop="20dp"
            android:onClick="salvar"
            android:hint="Salvar"
            android:layout_weight="1"
            android:textColorHint="@color/font_primary"
            android:textStyle="bold" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Calcelar"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/font_primary"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
